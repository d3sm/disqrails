<section class="mb-4 border border-dashed border-line rounded-xl bg-surface-mix px-3 py-2.5" id="theme-lab-panel" hidden>
  <p class="mt-1 text-muted">Hex editor (Catppuccin defaults).</p>
  <div class="grid grid-cols-[repeat(auto-fit,minmax(150px,1fr))] gap-2" id="theme-grid"></div>
  <div class="flex gap-2 mt-2">
    <button type="button" id="theme-apply" class="bg-surface text-primary rounded-btn px-2.5 py-1.5 cursor-pointer hover:text-accent">Apply Theme</button>
    <button type="button" id="theme-reset" class="bg-surface text-primary rounded-btn px-2.5 py-1.5 cursor-pointer hover:text-accent">Reset to Catppuccin</button>
  </div>
  <p class="min-h-5 mt-2 mb-0 text-sm text-muted" id="theme-status"></p>
</section>
